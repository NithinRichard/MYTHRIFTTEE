{{ 'section-video-background.css' | asset_url | stylesheet_tag }}

<div class="video-background-section section-{{ section.id }}-padding">
  <div class="video-background-container">
    {%- if section.settings.video != blank -%}
      {{ section.settings.video | video_tag: image_size: '1100x', loop: true, controls: false, muted: true, autoplay: true, playsinline: true, class: 'video-background-player' }}
    {%- else -%}
      <div class="video-background-placeholder">
        {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
      </div>
    {%- endif -%}

    <div class="video-background-overlay">
      <div class="page-width">
        <div class="video-background-content text-center">
          {%- if section.settings.heading != blank -%}
            <h2 class="video-background-heading {{ section.settings.heading_size }}">
              {{ section.settings.heading | escape }}
            </h2>
          {%- endif -%}

          {%- if section.settings.subheading != blank -%}
            <div class="video-background-subheading rte">
              {{ section.settings.subheading }}
            </div>
          {%- endif -%}

          {%- if section.settings.link_text != blank and section.settings.link != blank -%}
            <a href="{{ section.settings.link }}" class="button button--primary">
              {{ section.settings.link_text | escape }}
            </a>
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Video Background",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "video",
      "id": "video",
      "label": "Video"
    },
    {
      "type": "text",
      "id": "heading",
      "default": "Video Background",
      "label": "Heading"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "Small"
        },
        {
          "value": "h1",
          "label": "Medium"
        },
        {
          "value": "h0",
          "label": "Large"
        }
      ],
      "default": "h1",
      "label": "Heading size"
    },
    {
      "type": "richtext",
      "id": "subheading",
      "default": "<p>Tell your brand's story through video.</p>",
      "label": "Subheading"
    },
    {
      "type": "text",
      "id": "link_text",
      "default": "Shop Now",
      "label": "Button label"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Button link"
    },
    {
      "type": "range",
      "id": "height",
      "min": 400,
      "max": 1000,
      "step": 10,
      "unit": "px",
      "label": "Section height (desktop)",
      "default": 800
    },
    {
      "type": "range",
      "id": "mobile_height",
      "min": 300,
      "max": 800,
      "step": 10,
      "unit": "px",
      "label": "Section height (mobile)",
      "default": 500
    }
  ],
  "presets": [
    {
      "name": "Video Background"
    }
  ]
}
{% endschema %}
