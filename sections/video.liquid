{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* Video Section Styles */
  .video-section {
    position: relative;
  }

  .video-section__media {
    position: relative;
    width: 100%;
  }

  .video-section__video {
    display: block;
    position: relative;
    width: 100%;
    padding-bottom: 56.25%; /* Default 16:9 aspect ratio */
    background-color: #000; /* Fallback background */
  }

  .video-section__video iframe,
  .video-section__video video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100% !important;
    height: 100% !important;
    border: 0;
    object-fit: cover;
  }

  /* Poster Button */
  .deferred-media__poster-button {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    cursor: pointer;
    margin: 0;
    padding: 0;
    border: none;
    background-color: transparent;
    z-index: 2; /* Higher than video initially */
    transition: opacity 0.3s ease;
  }

  .deferred-media__poster-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .deferred-media__poster-icon {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 5rem;
    height: 5rem;
    color: #fff;
    background: rgba(0, 0, 0, 0.5);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.3s ease;
  }

  .deferred-media__poster-button:hover .deferred-media__poster-icon {
    transform: translate(-50%, -50%) scale(1.1);
  }

  .deferred-media__poster-icon svg {
    width: 2.5rem;
    height: 2.5rem;
    fill: currentColor;
  }

  /* Hide poster when playing */
  .deferred-media__poster-button.deferred-media__playing {
    opacity: 0;
    pointer-events: none;
    z-index: 0; /* Move behind video */
  }
  
  /* Ensure video is visible when playing */
  deferred-media[data-media-loaded="true"] iframe,
  deferred-media[data-media-loaded="true"] video {
    display: block;
    z-index: 1;
  }
{%- endstyle -%}

<script src="{{ 'media.js' | asset_url }}" defer="defer"></script>

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="video-section isolate{% unless section.settings.full_width %} page-width{% endunless %} section-{{ section.id }}-padding">
    <div
      {% if section.settings.full_width %}
        class="page-width"
      {% endif %}
    >
      {%- unless section.settings.heading == blank -%}
        <div class="title-wrapper title-wrapper--no-top-margin">
          <h2 class="title inline-richtext {{ section.settings.heading_size }}">{{ section.settings.heading }}</h2>
        </div>
      {%- endunless -%}
    </div>
    <div class="video-section__media global-media-settings{% if section.settings.full_width %} global-media-settings--full-width{% endif %}">
      {%- if section.settings.video == null and section.settings.video_url != null -%}
        {%- liquid
          assign loop = section.settings.enable_video_looping
          assign type = section.settings.video_url.type
          assign video_id = section.settings.video_url.id
        -%}
        {% render 'video',
          video: video_id,
          video_from_url: true,
          video_type: type,
          video_autoplay: loop,
          video_loop: loop,
          video_preview_image: section.settings.cover_image,
          video_class: 'video-section__video'
        %}
      {%- else -%}
        {% render 'video',
          video: section.settings.video,
          video_autoplay: section.settings.enable_video_looping,
          video_loop: section.settings.enable_video_looping,
          video_preview_image: section.settings.cover_image,
          video_class: 'video-section__video'
        %}
      {%- endif -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Video",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "default": "Video",
      "label": "Heading"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "Small"
        },
        {
          "value": "h1",
          "label": "Medium"
        },
        {
          "value": "h0",
          "label": "Large"
        }
      ],
      "default": "h1",
      "label": "Heading size"
    },
    {
      "type": "checkbox",
      "id": "enable_video_looping",
      "label": "Play video on loop",
      "default": false
    },
    {
      "type": "header",
      "content": "Shopify-hosted video"
    },
    {
      "type": "video",
      "id": "video",
      "label": "Video"
    },
    {
      "type": "header",
      "content": "Or embed video from URL"
    },
    {
      "type": "paragraph",
      "content": "Shows when no Shopify-hosted video is selected."
    },
    {
      "type": "video_url",
      "id": "video_url",
      "accept": ["youtube", "vimeo"],
      "default": "https://www.youtube.com/watch?v=_9VUPq3SxOc",
      "label": "URL",
      "info": "Use a YouTube or Vimeo URL"
    },
    {
      "type": "image_picker",
      "id": "cover_image",
      "label": "Cover image"
    },
    {
      "type": "text",
      "id": "description",
      "label": "Video description",
      "info": "Describe the video for customers using screen readers."
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Make section full width",
      "default": false
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Video"
    }
  ]
}
{% endschema %}
