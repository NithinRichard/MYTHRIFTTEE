<script>
  /* Reveal Animation on Scroll */
  document.addEventListener('DOMContentLoaded', () => {
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          const target = entry.target;
          const index = Array.from(target.parentNode.children).indexOf(target);
          
          // Cascading delay for grid items
          const delay = target.classList.contains('editorial-archive__heading') ? 0 : (index % 4) * 150;
          
          setTimeout(() => {
            target.classList.add('is-visible');
          }, delay);
          
          observer.unobserve(target);
        }
      });
    }, observerOptions);

    // Observe Heading & Splash
    const heading = document.querySelector('.editorial-archive__heading');
    const splash = document.querySelector('.editorial-archive__heading-splash');
    if (heading) observer.observe(heading);
    if (splash) observer.observe(splash);

    // Observe Cards
    document.querySelectorAll('.card-archive').forEach(card => {
      observer.observe(card);
    });
  });
</script>
