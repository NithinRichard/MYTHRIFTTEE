{% schema %}
{
  "name": "Editorial Archive",
  "tag": "section",
  "class": "section-editorial-archive",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Archive Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 4,
      "max": 50,
      "step": 1,
      "default": 12,
      "label": "Products to show"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "layout_mode",
      "options": [
        { "value": "masonry", "label": "Vertical Masonry (Grid)" },
        { "value": "carousel", "label": "Horizontal Carousel" }
      ],
      "default": "masonry",
      "label": "Layout Mode"
    },
    {
      "type": "range",
      "id": "desktop_columns",
      "min": 2,
      "max": 5,
      "step": 1,
      "default": 3,
      "label": "Desktop Columns (Masonry)"
    },
    {
      "type": "header",
      "content": "Styling"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full Width",
      "default": true
    },
    {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "THE ARCHIVE"
    }
  ],
  "presets": [
    {
      "name": "Editorial Archive Grid"
    }
  ]
}
{% endschema %}

{%- style -%}
  .editorial-archive {
    background-color: {{ section.settings.bg_color }};
    padding: 6rem 1.5rem; /* Increased padding */
    position: relative;
    overflow: hidden;
  }

  /* Premium noise overlay for texture */
  .editorial-archive::before {
    content: "";
    position: absolute;
    inset: 0;
    opacity: 0.04;
    pointer-events: none;
    z-index: 10;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.65' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E");
  }
  
  .editorial-archive__heading-container {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 6rem 0;
    margin-bottom: 4rem;
    overflow: visible;
  }

  .editorial-archive__heading-splash {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%) scale(1);
    width: 90%; /* Controlled width */
    height: 120%; /* Proportional height */
    max-width: 1400px;
    object-fit: contain;
    pointer-events: none;
    mix-blend-mode: multiply;
    z-index: 1;
    opacity: 0;
    
    /* Quality enhancements */
    image-rendering: -webkit-optimize-contrast;
    image-rendering: crisp-edges;
    
    transition: opacity 1.5s cubic-bezier(0.16, 1, 0.3, 1),
                transform 1.5s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .editorial-archive__heading {
      font-family: 'Yeezy TStar', sans-serif;
      font-weight: 900;
      text-transform: uppercase;
      font-size: 12vw; /* Adjusted for better mobile fit */
      line-height: 0.95;
      margin-bottom: 0; /* Handled by container */
      letter-spacing: 0.01em; /* Subtler tracking for mobile */
      text-align: center;
      word-break: normal;
      overflow-wrap: break-word;
      position: relative;
      z-index: 2;
      
      /* Refined Pure Silver Typography with Dynamic Sheen */
      background: linear-gradient(
        -45deg, 
        #EEEEEE 25%, 
        #FFFFFF 45%, 
        #FFFFFF 55%, 
        #EEEEEE 75%
      );
      background-size: 400% 100%;
      -webkit-background-clip: text;
      background-clip: text;
      -webkit-text-fill-color: transparent;
      
      /* Refined 3D Depth for Pure Silver with Glow */
      filter: drop-shadow(1px 1px 0px rgba(0,0,0,0.9))
              drop-shadow(2px 2px 0px rgba(0,0,0,0.5))
              drop-shadow(3px 3px 0px rgba(0,0,0,0.3))
              drop-shadow(4px 4px 15px rgba(0,0,0,0.7))
              drop-shadow(0 0 10px rgba(255,255,255,0.3))
              drop-shadow(0 0 20px rgba(255,255,255,0.1));
      
      /* Combined Animations: Glow + Sheen */
      animation: metallic-glow 4s ease-in-out infinite alternate,
                 metallic-sheen 6s linear infinite;
      
      /* Subtle text rendering optimization */
      -webkit-font-smoothing: antialiased;
      
      /* Animation Initial States */
      opacity: 0;
      transform: translateY(20px) scale(0.95);
      transition: opacity 1.5s cubic-bezier(0.16, 1, 0.3, 1), 
                  transform 1.5s cubic-bezier(0.16, 1, 0.3, 1);
  }

  @keyframes metallic-glow {
      from {
          filter: drop-shadow(1px 1px 0px rgba(0,0,0,0.9))
                  drop-shadow(2px 2px 0px rgba(0,0,0,0.5))
                  drop-shadow(3px 3px 0px rgba(0,0,0,0.3))
                  drop-shadow(4px 4px 15px rgba(0,0,0,0.7))
                  drop-shadow(0 0 10px rgba(255,255,255,0.2))
                  drop-shadow(0 0 20px rgba(255,255,255,0.05));
      }
      to {
          filter: drop-shadow(1px 1px 0px rgba(0,0,0,0.9))
                  drop-shadow(2px 2px 0px rgba(0,0,0,0.5))
                  drop-shadow(3px 3px 0px rgba(0,0,0,0.3))
                  drop-shadow(4px 4px 15px rgba(0,0,0,0.7))
                  drop-shadow(0 0 15px rgba(255,255,255,0.4))
                  drop-shadow(0 0 30px rgba(255,255,255,0.15));
      }
  }

  @keyframes metallic-sheen {
      0% { background-position: 100% 50%; }
      100% { background-position: 0% 50%; }
  }

  .editorial-archive__heading.is-visible {
      opacity: 1;
      transform: translateY(0) scale(1);
  }

  .editorial-archive__heading-splash.is-visible {
      opacity: 1;
      transform: translate(-50%, -50%) scale(1);
  }
  
  /* Masonry Layout */
  .editorial-archive__masonry {
    column-count: 2; /* Mobile default */
    column-gap: 1rem;
    max-width: {% if section.settings.full_width %}100%{% else %}1440px{% endif %};
    margin: 0 auto;
  }

  .editorial-archive__masonry .card-archive {
    break-inside: avoid;
    margin-bottom: 2rem;
  }

  /* Carousel Layout */
  .editorial-archive__carousel {
    display: flex;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    gap: 1rem;
    padding-bottom: 2rem; /* Space for scrollbar or look */
    -ms-overflow-style: none;  /* IE and Edge */
    scrollbar-width: none;  /* Firefox */
  }
  
  .editorial-archive__carousel::-webkit-scrollbar {
    display: none;
  }

  .editorial-archive__carousel .card-archive {
    flex: 0 0 80vw; /* Mobile width */
    scroll-snap-align: center;
    position: relative;
  }
  
  /* Card Archive Styles */
  .card-archive {
    position: relative;
    display: block;
    overflow: hidden;
    transition: transform 0.6s cubic-bezier(0.16, 1, 0.3, 1),
                opacity 1s cubic-bezier(0.16, 1, 0.3, 1),
                filter 1s cubic-bezier(0.16, 1, 0.3, 1);
    z-index: 2;
    
    /* Animation Initial States */
    opacity: 0;
    transform: translateY(40px) scale(0.95);
    filter: blur(4px);
  }

  .card-archive.is-visible {
    opacity: 1;
    transform: translateY(0) scale(1);
    filter: blur(0);
  }

  /* Interaction Hover Effect */
  .card-archive:hover:not(.is-visible) {
    /* Prevent hover while animating in */
  }

  .card-archive.is-visible:hover {
    transform: translateY(-12px); /* Slightly deeper lift for premium feel */
  }
  
  .card-archive__link {
    display: block;
    width: 100%;
    height: 100%;
    text-decoration: none;
    color: inherit;
  }
  
  .card-archive__image-wrapper {
    position: relative;
    width: 100%;
    overflow: hidden;
  }
  
  .card-archive__image {
    width: 100%;
    height: auto;
    object-fit: cover;
    transition: transform 1.2s cubic-bezier(0.16, 1, 0.3, 1);
  }
  
  .card-archive__vignette {
    position: absolute;
    inset: 0;
    background: radial-gradient(circle, transparent 40%, rgba(0,0,0,0.15) 100%);
    pointer-events: none;
    z-index: 2;
    opacity: 0.6;
    transition: opacity 0.5s ease;
  }

  .card-archive:hover .card-archive__image {
    transform: scale(1.08);
  }

  .card-archive:hover .card-archive__vignette {
    opacity: 0.3;
  }
  
  .card-archive__badge {
    position: absolute;
    top: 1rem;
    right: 1rem;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    color: #ffffff;
    font-size: 0.7rem;
    padding: 0.5rem 0.75rem;
    text-transform: uppercase;
    font-family: 'VCR_OSD_MONO', monospace;
    letter-spacing: 0.1em;
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 2px;
  }
  
  .card-archive__info {
    margin-top: 0.75rem;
    margin-bottom: 1.5rem;
  }
  
  .card-archive__title {
    font-size: 1.1rem;
    text-transform: uppercase;
    letter-spacing: 0.08em; /* Refined letter spacing */
    font-family: 'Yeezy TStar', sans-serif;
    font-weight: 700;
    line-height: 1.2;
    margin: 0;
    transition: color 0.3s ease;
  }

  .card-archive:hover .card-archive__title {
    color: rgba(0,0,0,0.7); /* Subtle fade on hover */
  }
  
  .card-archive__meta {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    margin-top: 0.25rem;
    opacity: 0.7;
    transition: opacity 0.3s;
  }
  
  .card-archive:hover .card-archive__meta {
    opacity: 1;
  }
  
  .card-archive__price,
  .card-archive__vendor {
    font-size: 0.875rem;
    font-family: 'VCR_OSD_MONO', monospace;
  }
  
  .card-archive__vendor {
    font-size: 0.75rem;
    text-transform: uppercase;
  }

  @media screen and (min-width: 768px) {
    .editorial-archive {
        padding: 10rem 4rem; /* More generous desktop padding */
    }
    .editorial-archive__heading-container {
        padding: 10rem 0;
    }
    .editorial-archive__heading-splash {
        width: 80%;
        height: 140%;
        transform: translate(-50%, -50%) scale(1);
    }
    .editorial-archive__heading {
        font-size: 12rem;
        letter-spacing: 0.02em; /* Restoring premium tracking for desktop */
    }

    /* Desktop Masonry Columns */
    .editorial-archive__masonry {
      column-count: {{ section.settings.desktop_columns }};
      column-gap: 2rem;
    }
    
    .editorial-archive__masonry .card-archive {
        margin-bottom: 3rem;
    }

    /* Desktop Carousel Items */
    .editorial-archive__carousel .card-archive {
      flex: 0 0 30vw; /* Desktop width */
    }
  }
{%- endstyle -%}

<div class="editorial-archive">
  {% if section.settings.title != blank %}
    <div class="editorial-archive__heading-container">
    <img src="{{ 'ink-splash.jpg' | asset_url }}" 
         class="editorial-archive__heading-splash" 
         alt="" 
         width="2000"
         height="2000"
         loading="lazy">
    <h2 class="editorial-archive__heading">
      {{ section.settings.title }}
    </h2>
  </div>
  {% endif %}

  <div class="editorial-archive__container">
    {%- assign collection = section.settings.collection -%}
    
    {% if collection != blank %}
      <div class="{% if section.settings.layout_mode == 'masonry' %}editorial-archive__masonry{% else %}editorial-archive__carousel{% endif %}">
        {% for product in collection.products limit: section.settings.products_to_show %}
            {% render 'card-archive', product: product %}
        {% endfor %}
      </div>
    {% else %}
      <div class="text-center py-20">
        <p style="font-family: 'VCR_OSD_MONO', monospace;">Select a collection to view the archive.</p>
      </div>
    {% endif %}
  </div>
</div>

