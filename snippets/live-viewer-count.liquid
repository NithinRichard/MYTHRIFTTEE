<div class="live-viewer-count" style="display: none;">
  <span class="pulsing-dot"></span>
  <span class="live-viewer-text">
    <span id="viewer-count-number">0</span> people are viewing this
  </span>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const viewerCountElement = document.getElementById('viewer-count-number');
    const container = document.querySelector('.live-viewer-count');
    
    if (!viewerCountElement || !container) return;

    // Configuration
    const minViewers = 3;
    const maxViewers = 12;
    
    // Generate initial random number
    let currentViewers = Math.floor(Math.random() * (maxViewers - minViewers + 1)) + minViewers;
    
    // Update the display
    viewerCountElement.textContent = currentViewers;
    container.style.display = 'flex'; // Show after number is ready

    // Randomly update the count every few seconds
    setInterval(() => {
      const change = Math.random() > 0.5 ? 1 : -1;
      currentViewers += change;
      
      // Keep within bounds
      if (currentViewers < minViewers) currentViewers = minViewers + 1;
      if (currentViewers > maxViewers) currentViewers = maxViewers - 1;
      
      viewerCountElement.textContent = currentViewers;
    }, 5000 + Math.random() * 5000); // Update every 5-10 seconds
  });
</script>
