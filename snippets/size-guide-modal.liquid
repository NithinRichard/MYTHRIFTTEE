<div id="size-guide-modal" class="size-guide-modal" aria-hidden="true">
  <div class="size-guide-overlay" onclick="closeSizeGuide()"></div>
  <div class="size-guide-content">
    <button class="size-guide-close" onclick="closeSizeGuide()" aria-label="Close">
      <svg xmlns="http://www.w3.org/2000/svg" aria-hidden="true" focusable="false" class="icon icon-close" fill="none" viewBox="0 0 18 17">
        <path d="M.865 15.978a.5.5 0 00.707.707l7.433-7.431 7.579 7.282a.501.501 0 00.846-.37.5.5 0 00-.153-.351L9.712 8.546l7.417-7.416a.5.5 0 10-.707-.708L8.991 7.853 1.413.573a.5.5 0 10-.693.72l7.563 7.268-7.418 7.417z" fill="currentColor">
      </svg>
    </button>
    <h2 class="h2" style="margin-top: 0; font-family: 'Yeezy TStar', sans-serif; text-transform: uppercase;">Size Guide</h2>
    <p class="size-guide-note" style="margin-bottom: 1.5rem; font-size: 0.9rem; opacity: 0.8;">Vintage sizing can vary. We recommend comparing these measurements to a similar item you own.</p>
    
    <div class="size-guide-table-wrapper">
      <table class="size-guide-table">
        <thead>
          <tr>
            <th>Size</th>
            <th>Chest (in)</th>
            <th>Length (in)</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>S</td>
            <td>36 - 38</td>
            <td>26 - 27</td>
          </tr>
          <tr>
            <td>M</td>
            <td>38 - 40</td>
            <td>27 - 28</td>
          </tr>
          <tr>
            <td>L</td>
            <td>40 - 42</td>
            <td>28 - 29</td>
          </tr>
          <tr>
            <td>XL</td>
            <td>42 - 44</td>
            <td>29 - 30</td>
          </tr>
          <tr>
            <td>XXL</td>
            <td>44 - 46</td>
            <td>30 - 31</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

<script>
  function openSizeGuide() {
    const modal = document.getElementById('size-guide-modal');
    if (modal) {
      modal.setAttribute('aria-hidden', 'false');
      document.body.style.overflow = 'hidden';
    }
  }

  function closeSizeGuide() {
    const modal = document.getElementById('size-guide-modal');
    if (modal) {
      modal.setAttribute('aria-hidden', 'true');
      document.body.style.overflow = '';
    }
  }
</script>
