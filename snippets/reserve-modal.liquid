{% comment %}
  Reserve Modal Component
  
  @param {object} product - The product object
  @param {object} variant - The product variant
{% endcomment %}

<dialog 
  ref="reserveModal" 
  class="reserve-modal"
  data-product-id="{{ product.id }}"
>
  <div class="reserve-modal__container">
    <button 
      class="reserve-modal__close" 
      on:click="/closeModal"
      aria-label="Close"
    >
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <line x1="18" y1="6" x2="6" y2="18"></line>
        <line x1="6" y1="6" x2="18" y2="18"></line>
      </svg>
    </button>

    <div class="reserve-modal__content">
      <div class="reserve-modal__header">
        <div class="reserve-modal__badge">1 of 1</div>
        <h2 class="reserve-modal__title">Reserve This Exclusive Piece</h2>
        <p class="reserve-modal__subtitle">{{ product.title }}</p>
      </div>

      <div class="reserve-modal__body">
        <p class="reserve-modal__description">
          This is a unique 1-of-1 item. Reserve it now and we'll hold it for you for <strong>5 minutes</strong> while you complete your purchase.
        </p>

        <form class="reserve-modal__form" on:submit="/handleReserve">
          <div class="reserve-modal__field">
            <label for="reserve-email" class="reserve-modal__label">Your Email</label>
            <input 
              type="email" 
              id="reserve-email" 
              name="email" 
              class="reserve-modal__input"
              placeholder="your@email.com"
              required
              ref="emailInput"
            >
          </div>

          <div class="reserve-modal__field">
            <label for="reserve-name" class="reserve-modal__label">Your Name</label>
            <input 
              type="text" 
              id="reserve-name" 
              name="name" 
              class="reserve-modal__input"
              placeholder="Your name"
              required
              ref="nameInput"
            >
          </div>

          <div class="reserve-modal__info">
            <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
              <path d="M8 0C3.6 0 0 3.6 0 8s3.6 8 8 8 8-3.6 8-8-3.6-8-8-8zm1 12H7V7h2v5zm0-6H7V4h2v2z"/>
            </svg>
            <span>No payment required now. We'll email you confirmation and next steps.</span>
          </div>

          <button type="submit" class="button button-reserve-confirm" ref="submitButton">
            <span ref="buttonText">Confirm Reservation</span>
            <span class="reserve-modal__spinner" ref="spinner" hidden>
              <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
                <circle cx="10" cy="10" r="8" stroke="currentColor" stroke-width="2" opacity="0.25"/>
                <path d="M10 2a8 8 0 0 1 8 8" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
              </svg>
            </span>
          </button>
        </form>
      </div>
    </div>
  </div>
</dialog>

{% stylesheet %}
  .reserve-modal {
    border: none;
    padding: 0;
    background: transparent;
    max-width: 500px;
    width: 90vw;
    border-radius: 12px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
  }

  .reserve-modal::backdrop {
    background: rgba(0, 0, 0, 0.8);
    backdrop-filter: blur(4px);
  }

  .reserve-modal__container {
    background: #ffffff;
    border-radius: 12px;
    position: relative;
    overflow: hidden;
  }

  .reserve-modal__close {
    position: absolute;
    top: 16px;
    right: 16px;
    background: rgba(0, 0, 0, 0.05);
    border: none;
    border-radius: 50%;
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.2s;
    z-index: 10;
  }

  .reserve-modal__close:hover {
    background: rgba(0, 0, 0, 0.1);
    transform: rotate(90deg);
  }

  .reserve-modal__content {
    padding: 40px 32px 32px;
  }

  .reserve-modal__header {
    text-align: center;
    margin-bottom: 32px;
  }

  .reserve-modal__badge {
    display: inline-block;
    background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
    color: #ffffff;
    padding: 6px 16px;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 700;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    margin-bottom: 16px;
  }

  .reserve-modal__title {
    font-family: 'Yeezy TStar', sans-serif;
    font-size: 1.5rem;
    font-weight: 900;
    margin: 0 0 8px 0;
    color: #1a1a1a;
  }

  .reserve-modal__subtitle {
    font-size: 0.875rem;
    color: #666;
    margin: 0;
  }

  .reserve-modal__description {
    font-size: 0.9375rem;
    line-height: 1.6;
    color: #333;
    margin-bottom: 24px;
  }

  .reserve-modal__form {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .reserve-modal__field {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .reserve-modal__label {
    font-size: 0.875rem;
    font-weight: 600;
    color: #1a1a1a;
  }

  .reserve-modal__input {
    padding: 12px 16px;
    border: 1px solid #ddd;
    border-radius: 8px;
    font-size: 1rem;
    transition: all 0.2s;
  }

  .reserve-modal__input:focus {
    outline: none;
    border-color: #1a1a1a;
    box-shadow: 0 0 0 3px rgba(0, 0, 0, 0.05);
  }

  .reserve-modal__info {
    display: flex;
    align-items: flex-start;
    gap: 8px;
    padding: 12px;
    background: rgba(0, 0, 0, 0.03);
    border-radius: 8px;
    font-size: 0.8125rem;
    color: #666;
    line-height: 1.5;
  }

  .reserve-modal__info svg {
    flex-shrink: 0;
    margin-top: 2px;
  }

  .button-reserve-confirm {
    background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
    color: #ffffff;
    border: none;
    padding: 14px 24px;
    font-family: 'Yeezy TStar', sans-serif;
    font-weight: 700;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
    position: relative;
  }

  .button-reserve-confirm:hover:not(:disabled) {
    background: linear-gradient(135deg, #2d2d2d 0%, #3d3d3d 100%);
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
  }

  .button-reserve-confirm:disabled {
    opacity: 0.6;
    cursor: not-allowed;
  }

  .reserve-modal__spinner {
    display: inline-block;
    animation: spin 1s linear infinite;
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }

  @media (max-width: 749px) {
    .reserve-modal__content {
      padding: 32px 24px 24px;
    }

    .reserve-modal__title {
      font-size: 1.25rem;
    }
  }
{% endstylesheet %}

<script type="module">
  class ReserveModalComponent extends HTMLElement {
    constructor() {
      super();
      this.modal = this.querySelector('[ref="reserveModal"]');
      this.form = this.querySelector('.reserve-modal__form');
      this.emailInput = this.querySelector('[ref="emailInput"]');
      this.nameInput = this.querySelector('[ref="nameInput"]');
      this.submitButton = this.querySelector('[ref="submitButton"]');
      this.buttonText = this.querySelector('[ref="buttonText"]');
      this.spinner = this.querySelector('[ref="spinner"]');
    }

    connectedCallback() {
      this.form?.addEventListener('submit', this.handleReserve.bind(this));
      
      // Listen for show modal event from parent
      this.parentElement?.addEventListener('click', (e) => {
        if (e.target.closest('[on\\:click="/showReserveModal"]')) {
          this.showModal();
        }
      });

      // Listen for close modal event
      this.querySelector('[on\\:click="/closeModal"]')?.addEventListener('click', () => {
        this.closeModal();
      });
    }

    showModal() {
      this.modal?.showModal();
    }

    closeModal() {
      this.modal?.close();
    }

    async handleReserve(e) {
      e.preventDefault();

      const email = this.emailInput.value;
      const name = this.nameInput.value;
      const productId = this.closest('[data-product-id]')?.dataset.productId;
      const productTitle = this.closest('reserve-button-component')?.dataset.productTitle;

      // Show loading state
      this.submitButton.disabled = true;
      this.buttonText.hidden = true;
      this.spinner.hidden = false;

      try {
        // Store reservation in localStorage
        const reserveKey = `reserve_${productId}`;
        const expiresAt = Date.now() + (5 * 60 * 1000); // 5 minutes
        
        const reservationData = {
          productId,
          productTitle,
          email,
          name,
          expiresAt,
          createdAt: Date.now()
        };

        localStorage.setItem(reserveKey, JSON.stringify(reservationData));

        // Send email notification
        await this.sendEmailNotification(reservationData);

        // Close modal and update button
        this.closeModal();
        this.dispatchEvent(new CustomEvent('reservation-confirmed', {
          bubbles: true,
          detail: reservationData
        }));

        // Reload to show reserved state
        location.reload();

      } catch (error) {
        console.error('Reservation error:', error);
        alert('There was an error processing your reservation. Please try again.');
        
        // Reset button state
        this.submitButton.disabled = false;
        this.buttonText.hidden = false;
        this.spinner.hidden = true;
      }
    }

    async sendEmailNotification(data) {
      // Send via Shopify contact form endpoint
      // Note: This will work silently in the background
      // The form submission happens without waiting for response to avoid CORS issues
      
      const formData = new FormData();
      formData.append('contact[email]', data.email);
      formData.append('contact[name]', data.name);
      formData.append('contact[body]', `RESERVATION REQUEST

Product: ${data.productTitle}
Product ID: ${data.productId}
Customer: ${data.name}
Email: ${data.email}
Reserved At: ${new Date(data.createdAt).toLocaleString()}
Expires At: ${new Date(data.expiresAt).toLocaleString()}

Please contact this customer to confirm their reservation.`);

      // Use fetch with no-cors mode to avoid CORS errors
      // The email will still be sent, but we won't get a response
      try {
        await fetch('/contact', {
          method: 'POST',
          mode: 'no-cors',
          body: formData
        });
      } catch (err) {
        // Silently fail - reservation still works via localStorage
        console.log('Email notification sent (background)');
      }
    }

  }

  customElements.define('reserve-modal-component', ReserveModalComponent);
</script>
