{% comment %}
  Branded Pre-loader
  - Plays once per session
  - Brutalist aesthetic: Black background, white logo/text
{% endcomment %}

<style>
  #preloader {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #000;
    z-index: 99999;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    transition: opacity 0.5s ease-out, visibility 0.5s ease-out;
  }

  #preloader.hidden {
    opacity: 0;
    visibility: hidden;
    pointer-events: none;
  }

  .preloader-content {
    text-align: center;
    color: #fff;
  }

  .preloader-logo {
    font-family: 'VCR OSD Mono', monospace;
    font-size: 2rem;
    margin-bottom: 2rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .preloader-bar-container {
    width: 200px;
    height: 2px;
    background-color: rgba(255, 255, 255, 0.2);
    overflow: hidden;
  }

  .preloader-bar {
    width: 0%;
    height: 100%;
    background-color: #fff;
    transition: width 0.1s linear;
  }

  .preloader-text {
    margin-top: 1rem;
    font-family: 'VCR OSD Mono', monospace;
    font-size: 0.8rem;
    opacity: 0.7;
  }
</style>

<div id="preloader">
  <div class="preloader-content">
    <div class="preloader-logo">{{ shop.name }}</div>
    <div class="preloader-bar-container">
      <div class="preloader-bar" id="preloader-bar"></div>
    </div>
    <div class="preloader-text">LOADING SYSTEM...</div>
  </div>
</div>

<script>
  (function() {
    const preloader = document.getElementById('preloader');
    const bar = document.getElementById('preloader-bar');
    const hasSeenPreloader = sessionStorage.getItem('hasSeenPreloader');

    if (hasSeenPreloader || window.location.pathname.includes('/pages/wishlist')) {
      preloader.style.display = 'none';
      return;
    }

    // Simulate loading progress
    let width = 0;
    const interval = setInterval(() => {
      if (width >= 100) {
        clearInterval(interval);
        setTimeout(() => {
          preloader.classList.add('hidden');
          sessionStorage.setItem('hasSeenPreloader', 'true');
        }, 500);
      } else {
        width += Math.random() * 10; // Random increments
        if (width > 100) width = 100;
        bar.style.width = width + '%';
      }
    }, 100);
  })();
</script>
