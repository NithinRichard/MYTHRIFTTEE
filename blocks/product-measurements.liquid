{%- assign block_settings = block.settings -%}
<div class="product-measurements spacing-style" style="{% render 'spacing-style', settings: block_settings %}">
  {%- if block_settings.heading != blank -%}
    <h3 class="product-measurements__heading">{{ block_settings.heading }}</h3>
  {%- endif -%}
  
  <div class="product-measurements__content">
    {%- assign pit_to_pit = product.metafields.custom.pit_to_pit -%}
    {%- assign length = product.metafields.custom.length -%}
    
    {%- if pit_to_pit != blank or length != blank -%}
      <div class="product-measurements__grid">
        {%- if pit_to_pit != blank -%}
          <div class="product-measurements__item">
            <span class="product-measurements__label">Pit to Pit</span>
            <span class="product-measurements__value">{{ pit_to_pit }}</span>
          </div>
        {%- endif -%}
        {%- if length != blank -%}
          <div class="product-measurements__item">
            <span class="product-measurements__label">Length</span>
            <span class="product-measurements__value">{{ length }}</span>
          </div>
        {%- endif -%}
      </div>
    {%- else -%}
        <div class="product-measurements__grid">
          <div class="product-measurements__item">
            <span class="product-measurements__label">Pit to Pit</span>
            <span class="product-measurements__value">--</span>
          </div>
          <div class="product-measurements__item">
            <span class="product-measurements__label">Length</span>
            <span class="product-measurements__value">--</span>
          </div>
        </div>
        {%- if request.design_mode -%}
          <p style="font-size: 0.8em; opacity: 0.7; margin-top: 0.5rem;">(Add "pit_to_pit" and "length" metafields to display values)</p>
        {%- endif -%}
    {%- endif -%}
  </div>
</div>

{% stylesheet %}
  .product-measurements__heading {
    font-family: 'Anonymous Pro', monospace;
    text-transform: uppercase;
    font-size: 1rem;
    margin-bottom: 1rem;
    letter-spacing: 0.05em;
  }
  .product-measurements__grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
    border: 1px solid #000;
    padding: 1rem;
  }
  .product-measurements__item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }
  .product-measurements__label {
    font-family: 'Anonymous Pro', monospace;
    font-weight: bold;
    text-transform: uppercase;
    font-size: 0.75rem;
    opacity: 0.7;
    margin-bottom: 0.25rem;
  }
  .product-measurements__value {
    font-family: 'Anonymous Pro', monospace;
    font-size: 1.25rem;
    font-weight: bold;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Measurements",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Flat Lay Measurements"
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "Top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 16
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "Bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 16
    }
  ],
  "presets": [
    {
      "name": "Measurements"
    }
  ]
}
{% endschema %}
