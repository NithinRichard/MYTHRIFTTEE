{% schema %}
{
  "name": "Measurements",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Flat Lay Measurements"
    }
  ],
  "presets": [
    {
      "name": "Measurements"
    }
  ]
}
{% endschema %}

<div class="product-measurements product-block">
  {% if block.settings.heading != blank %}
    <h3 class="h4" style="font-family: 'VCR_OSD_MONO', monospace;">{{ block.settings.heading }}</h3>
  {% endif %}
  <div class="product-measurements__content rte">
    {% comment %} Placeholder for dynamic measurement data {% endcomment %}
    <p>See description for details.</p>
  </div>
</div>
